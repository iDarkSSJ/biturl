{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/src/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)\\.(js|css|html|png|jpg|jpeg|gif|svg|webp)$",
      "dest": "client/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server/src/index.js"
    }
  ]
}